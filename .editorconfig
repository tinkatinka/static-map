root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{ts,tsx,js,jsx,html,css,scss,sass,sh}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{json,yml}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false
